{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // 1. Definição do Path Alias (@/) para importações limpas (corrigindo o problema do ../../../)
    "paths": {
      "@/*": ["./*"]
    }
  },
  // 2. Inclui todos os arquivos TypeScript e JavaScript
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx"
  ],
  // 3. Exclui a pasta de módulos
  "exclude": [
    "node_modules"
  ]
}